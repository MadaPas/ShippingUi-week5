<div class="topnav">
  {{#each nav}}
    <a href="{{url}}">{{title}}</a>
  {{/each}}
</div>

<h1>This is the PRODUCT page</h1>

<article>
  <ul>
    <li>{{product.id}}</li>
    <li>{{product.item}}</li>
    <li>{{product.price}}</li>
    <li>{{product.description}}</li>
  </ul>
</article>

<form action="/products/{{product.id}}" method="post">
  <div>
    <label for="qty"></label>
    <input name="qty" id="qty" value="1">
  </div>
  <div>
    <button class="button button-add">Add</button>
  </div>
</form>